  body
    // <div class="container">
    #menu
      nav
        .nav-wrapper
          .logo
            ul#nav-mobile.left.hide-on-med-and-down
              li
                a.imgurlogo(href='')
                  img(src='./app/images/imgur_logo_pack/imgur-logo-transparent.png', height='42', width='120', alt='')
              li
                i.large.material-icons.arrow arrow_drop_down
              li
              form(action="/new" method="POST" enctype="multipart/form-data")
                input(type="file" name="image" )
                input.waves-effect.waves-light.btn.post(type='submit',value='upload', style='height: 44px')
          ul#nav-mobile.right.hide-on-med-and-down
            li
              a(href='sass.html')
                i.material-icons.left search
            li
              a(href='badges.html') sign in
            li
              a(href='collapsible.html') sign up
    .header.section
      span.before-text The
      span.name
        a(href='') Most Viral
      span.middle-text images on the Internet, sorted by
      span.selection
        a(href='') popularity
    .content
      .card
        img(src='./app/images/demo/snowpiercer.jpg', alt='')
      .card
        img(src='./app/images/demo/law_abiding_citizen.jpg', alt='')
      .card
        img(src='./app/images/demo/Fight_club.jpg', alt='')
      .card
        img(src='./app/images/demo/rio.jpg', alt='')
      .card
        img(src='./app/images/demo/real_steel.jpg', alt='')
      .card
        each image in images
          image(id=image.id)
              div.delete Delete
              img(src=image.image)
   
    script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(type='text/javascript', src='/app/js/materialize.min.js')
    script(type='text/javascript', src='/scripts/jquery-3.3.1.min.js')
    script(type='text/javascript', src='/scripts/functions.js')
   
